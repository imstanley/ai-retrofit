{
  "name": "ai-retrofit",
  "version": "1.0.0",
  "description": "Smart intercom control system with web and mobile apps",
  "private": true,
  "workspaces": [
    "web",
    "mobile",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:mobile\"",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:web",
    "build:web": "cd web && npm run build",
    "install:all": "npm install && cd web && npm install && cd ../mobile && npm install && cd ../shared && npm install",
    "clean": "rm -rf node_modules web/node_modules mobile/node_modules shared/node_modules",
    "type-check": "npm run type-check:web && npm run type-check:mobile",
    "type-check:web": "cd web && npm run type-check",
    "type-check:mobile": "cd mobile && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
