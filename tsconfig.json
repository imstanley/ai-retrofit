{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./apps/web" },
    { "path": "./apps/mobile" }
  ],
  "files": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "apps/*/node_modules",
    "packages/*/node_modules",
    "apps/*/dist",
    "packages/*/dist"
  ]
}
